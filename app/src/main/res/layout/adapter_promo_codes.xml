<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="6dp"
                                    android:shape="ring">

  <RelativeLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/promoCodesAdapterMainPanel"
                  android:clickable="true"
                  android:background="@drawable/bg_item"
                  android:padding="10dp">

    <com.rey.material.widget.TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/promoCodesAdapterName" android:layout_alignParentTop="true" android:layout_marginBottom="3dp"
        android:textSize="@dimen/promo_codes_adapter_header"
        android:layout_toLeftOf="@+id/promoCodesAdapterDiscount"
        android:textColor="@color/toolbar" android:textStyle="bold"/>

    <com.rey.material.widget.TextView
        android:id="@+id/promoCodesAdapterInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/promoCodesAdapterName"
        android:layout_toLeftOf="@+id/promoCodesAdapterDiscount"
        android:text="Info"
        android:textSize="@dimen/promo_codes_adapter_text1"/>

    <com.rey.material.widget.TextView
        android:id="@+id/promoCodesAdapterDiscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="50%"
        android:textColor="@color/price"
        android:textSize="@dimen/promo_codes_adapter_discount"
        android:textStyle="bold"/>

  </RelativeLayout>
</android.support.v7.widget.CardView>