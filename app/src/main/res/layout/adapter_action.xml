<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="6dp"
                                    android:shape="ring">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/rlAdapterAction"
      android:padding="@dimen/place_padding"
      android:orientation="horizontal"
      android:clickable="true"
      android:background="@drawable/bg_item"
      android:weightSum="100" android:baselineAligned="false" android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="39" android:layout_marginRight="8dp" android:layout_gravity="top">
      <com.rey.material.widget.TextView
          android:id="@+id/tvAdapterActionTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="New Text"
          android:textSize="@dimen/action_title"
          android:ellipsize="end"
          android:textColor="@color/toolbar"
          android:maxLines="3" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"/>
      <com.rey.material.widget.TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="New Text"
          android:textSize="@dimen/action_seat_name"
          android:id="@+id/tvAdapterActionDates"
          android:layout_alignParentLeft="true" android:layout_below="@+id/tvAdapterActionTitle"
          android:layout_marginTop="7dp"/>
      <com.rey.material.widget.TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="New Text"
          android:textSize="@dimen/action_seat_name"
          android:id="@+id/tvAdapterActionTime"
          android:layout_alignParentLeft="true" android:layout_below="@+id/tvAdapterActionDates"
      />
      <com.rey.material.widget.TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="New Text"
          android:textSize="@dimen/action_seat_name"
          android:id="@+id/tvAdapterActionMinSum"
          android:layout_alignParentLeft="true"
          android:layout_below="@+id/tvAdapterActionTime"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="22">

      <com.makeramen.roundedimageview.RoundedImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:scaleType="fitXY"
          android:adjustViewBounds="true"
          app:riv_corner_radius="5dp"
          android:id="@+id/ivAdapterActionPoster1" android:src="@drawable/poster1"
          android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="39" android:layout_marginLeft="8dp" android:layout_gravity="top">
      <com.rey.material.widget.TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="New Text"
          android:textSize="@dimen/action_seat_name"
          android:id="@+id/tvAdapterActionDescription"
          android:layout_alignParentTop="true"/>

      <com.rey.material.widget.TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="New Text"
          android:textSize="@dimen/action_seat_name"
          android:layout_below="@+id/tvAdapterActionDescription"
          android:id="@+id/tvAdapterActionVenue" android:singleLine="true" android:textStyle="bold"/>

      <com.rey.material.widget.TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="New Text"
          android:textSize="@dimen/action_seat_name"
          android:id="@+id/tvAdapterActionRating"
          android:layout_below="@+id/tvAdapterActionVenue"
          android:textColor="@color/toolbar" android:layout_marginTop="7dp"/>
    </RelativeLayout>

  </LinearLayout>
</android.support.v7.widget.CardView>