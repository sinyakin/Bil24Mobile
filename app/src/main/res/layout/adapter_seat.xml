<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <com.rey.material.widget.CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New CheckBox"
            android:id="@+id/checkBoxAdapterSeat" android:gravity="center" android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>

    <com.rey.material.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tvAdapterSeatPrice"
            android:gravity="right" android:layout_below="@+id/checkBoxAdapterSeat" android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"/>
</RelativeLayout>