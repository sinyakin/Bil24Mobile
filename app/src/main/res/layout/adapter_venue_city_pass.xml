<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="6dp"
                                    android:shape="ring">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/venueCityPassAdapterMainPanel"
      android:padding="@dimen/place_padding"
      android:orientation="horizontal"
      android:clickable="true"
      android:background="@drawable/bg_item"
      android:weightSum="100" android:baselineAligned="false" android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="22">

      <com.makeramen.roundedimageview.RoundedImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:scaleType="fitXY"
          android:adjustViewBounds="true"
          app:riv_corner_radius="5dp"
          android:id="@+id/venueCityPassAdapterVenuePoster" android:src="@drawable/poster1"
          android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="78" android:layout_marginLeft="8dp" android:layout_gravity="top">
      <com.rey.material.widget.TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="New Text"
          android:textSize="@dimen/action_title"
          android:id="@+id/venueCityPassAdapterTvName"
          android:layout_alignParentTop="true"/>

      <com.rey.material.widget.TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="New Text"
          android:textSize="@dimen/action_seat_name"
          android:layout_below="@+id/venueCityPassAdapterTvName"
          android:id="@+id/venueCityPassAdapterTvAddress"/>

    </RelativeLayout>

  </LinearLayout>
</android.support.v7.widget.CardView>