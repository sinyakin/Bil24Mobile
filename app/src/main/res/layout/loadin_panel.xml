<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:id="@+id/eventSeatLoading1Panel"
                android:layout_marginTop="10dp" android:visibility="visible"
                tools:context="com.bil24.myelement.MyLoadingPanel">

    <com.rey.material.widget.ProgressView
            android:id="@+id/progressView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            app:pv_autostart="true"
            app:pv_circular="true"
            app:pv_progressStyle="@style/ColorsCircularProgressDrawableStyle"
            app:pv_progressMode="indeterminate" android:layout_alignParentTop="true"
            android:layout_centerInParent="true"/>

    <com.rey.material.widget.TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loading_panel_text_view"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/progressView" android:layout_marginTop="5dp"
            android:gravity="center_horizontal" android:textSize="@dimen/my_loading_text_size"/>
</RelativeLayout>