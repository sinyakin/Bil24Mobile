<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:padding="10dp"
              android:focusable="true"
              android:focusableInTouchMode="true">

  <EditText
      android:id="@+id/createOrderViewRmkEmailTextView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="адрес эл. почты" android:layout_marginTop="10dp" android:inputType="textEmailAddress"/>

  <EditText android:id="@+id/createOrderViewRmkPhoneTextView" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:hint="номер телефона" android:layout_marginTop="10dp" android:inputType="number"/>

</LinearLayout>