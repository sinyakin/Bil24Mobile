<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/panel_background"
        tools:context="com.bil24.fragments.OrderFragment">

    <com.bil24.myelement.MySwipeRefreshLayout
        android:id="@+id/orderFragmentRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <ListView
            android:id="@+id/orderFragmentListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/transparent"
            android:scrollbarStyle="outsideOverlay"
            android:dividerHeight="10.0sp" android:padding="10dp"/>
    </com.bil24.myelement.MySwipeRefreshLayout>

    <com.rey.material.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_empty"
        android:id="@+id/orderFragmentTextViewEmpty"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:textColor="#db4a4a4a"/>
</RelativeLayout>
