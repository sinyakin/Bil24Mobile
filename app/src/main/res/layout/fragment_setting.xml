<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/settingMainPanel"
    android:background="@color/panel_background"
    android:orientation="vertical" android:padding="5dp">

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" android:background="@drawable/setting_bg" android:padding="10dp"
      android:id="@+id/settingFragmentCityPanel">
    <com.rey.material.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Фильтр"
        android:id="@+id/settingFragmentTextView1" android:textColor="#ff000000"/>
    <com.rey.material.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="нажмите, чтобы установить"
        android:id="@+id/settingFragmentTextViewCity"/>
  </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="?android:attr/listDivider" android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"/>

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" android:background="@drawable/setting_bg" android:padding="10dp"
      android:id="@+id/settingFragmentEmailPanel">
    <com.rey.material.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Адрес электронной почты"
        android:id="@+id/settingFragmentTextView2" android:textColor="#ff000000"/>
    <com.rey.material.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="нажмите, чтобы установить"
        android:id="@+id/settingFragmentTextViewEmail"/>
  </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="?android:attr/listDivider" android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"/>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content" android:id="@+id/settingFragmentNotificationPanel" android:padding="10dp">

    <com.rey.material.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Уведомления"
        android:id="@+id/settingFragmentTextView3" android:textColor="#ff000000" android:layout_alignParentTop="true"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Новости"
        android:id="@+id/settingFragmentNotificationNewsSwitch" android:layout_below="@+id/settingFragmentTextView3"
        android:textColor="#d65e5e5e"
        />

  </RelativeLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="?android:attr/listDivider" android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp" android:layout_below="@+id/settingFragmentNotificationNews"/>

  <com.rey.material.widget.TextView
      android:id="@+id/settingFragmentTextViewFid"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_gravity="left"
      android:padding="10dp"
      android:text="FID"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:textColor="#ff000000" />

</LinearLayout>